log
file_server

reverse_proxy /api/* api.{$COPILOT_SERVICE_DISCOVERY_ENDPOINT}:3000
reverse_proxy /resources/* api.{$COPILOT_SERVICE_DISCOVERY_ENDPOINT}:3000
reverse_proxy /temp/* api.{$COPILOT_SERVICE_DISCOVERY_ENDPOINT}:3000
reverse_proxy /secure/* api.{$COPILOT_SERVICE_DISCOVERY_ENDPOINT}:3000

route /assets/* {
	uri strip_prefix /assets
	s3proxy {
		bucket {$ASSETS_NAME}
	}
}
